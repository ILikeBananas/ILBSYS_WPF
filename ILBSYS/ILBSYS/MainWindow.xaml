<Window x:Class="ILBSYS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ILBSYS"
        mc:Ignorable="d"
        Title="ILBSYS" Height="450" Width="800">
    <Grid>
        <Label Content="ILBSYS" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,10,0,0" Height="44" Width="331" FontSize="24"/>

        <ComboBox Name="cbServers" HorizontalAlignment="Left" Height="26" Margin="122,73,0,0" VerticalAlignment="Top" Width="196">
            <ComboBoxItem IsSelected="True">Server 1 | 192.168.1.2</ComboBoxItem>
            <ComboBoxItem>Server 2 | 10.2.0.5</ComboBoxItem>
        </ComboBox>
        <ComboBox Name="cbStatsToDisplay" HorizontalAlignment="Left" Height="26" Margin="352,73,0,0" VerticalAlignment="Top" Width="196">
            <ComboBoxItem IsSelected="True">CPU information</ComboBoxItem>
            <ComboBoxItem>CPU utilization</ComboBoxItem>
            <ComboBoxItem>Disk information</ComboBoxItem>
        </ComboBox>

        <Label Content="Events" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,78,0,0"/>
        <DataGrid Name="dgEvents"  HorizontalAlignment="Left" Height="130" VerticalAlignment="Top" Width="338" Margin="10,104,0,0"/>

        <Label Content="Hosts" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,242,0,0"/>
        <DataGrid Name="dgHosts" HorizontalAlignment="Left" Height="129" VerticalAlignment="Top" Width="338" Margin="10,268,0,0"/>

        <DataGrid Name="dgPCInfo" HorizontalAlignment="Left" Height="293" VerticalAlignment="Top" Width="406" Margin="353,104,0,0"/>
        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24" Margin="323,73,0,0" Height="26" RenderTransformOrigin="5.477,2.722"/>


    </Grid>
</Window>
